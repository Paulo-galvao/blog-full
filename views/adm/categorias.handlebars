<h2>Lista de categorias</h2>
<a href="/adm/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <a href="/adm/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-2">Editar Categoria</button>
            </a>
            <form action="/adm/categorias/deletar" method="post">
                <input type="hidden" name="id" value={{_id}}>
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}